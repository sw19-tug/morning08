<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewGalgen"
        android:layout_width="408dp"
        android:layout_height="409dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="176dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/galgen"
        android:tag="imageGalgen"
        app:layout_constraintBottom_toTopOf="@+id/btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="15dp"
        android:tag="btnGo"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="15dp"
        android:tag="btnGo"
        android:text="Check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="15dp"
        android:tag="btnGo"
        android:text="Retry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewHead"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="400dp"
        android:src="@drawable/kreis"
        app:layout_constraintBottom_toTopOf="@+id/btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewBody"
        android:layout_width="119dp"
        android:layout_height="106dp"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="200dp"
        android:rotation="90"
        android:src="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHead" />

    <ImageView
        android:id="@+id/imageViewLeftHand"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="383dp"
        android:src="@drawable/line_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewLeftLeg"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="349dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="299dp"
        android:src="@drawable/line_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewRightHand"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="382dp"
        android:src="@drawable/line_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageViewRightLeg"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="349dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="299dp"
        android:src="@drawable/line_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtInput"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_marginTop="499dp"
        android:layout_marginBottom="187dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Character"
        android:inputType="textPersonName"
        android:maxLength="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblOutput"
        android:layout_width="332dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewGalgen" />

    <TextView
        android:id="@+id/lblScore"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="444dp" />

</android.support.constraint.ConstraintLayout>